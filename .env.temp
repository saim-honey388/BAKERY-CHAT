# Environment Variables Template (Gemini-only)

# LLM Providers
ENHANCED_PROVIDER=gemini
PRIMARY_PROVIDER=gemini

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_FALLBACK_MODEL=gemini-2.0-flash-lite

# Optional Groq (only if you want fallback in future)
# GROQ_API_KEY=your_groq_api_key_here
# ENHANCED_GROQ_API_KEY=your_groq_api_key_here
# GROQ_LLM_MODEL=llama-3.1-8b-instant

# Redis (session storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# RAG / Retrieval settings
CHUNK_SIZE=250
CHUNK_OVERLAP=50
MAX_CONTEXT_DOCS=5
MAX_CONVERSATION_TURNS=10
FAISS_INDEX_PATH=data/processed/faiss_index.bin
CHUNKS_FILE_PATH=data/processed/chunks.json
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
WHOOSH_INDEX_PATH=data/processed/whoosh_index
